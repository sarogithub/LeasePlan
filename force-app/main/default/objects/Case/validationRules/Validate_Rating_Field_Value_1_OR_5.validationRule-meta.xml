<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Validate_Rating_Field_Value_1_OR_5</fullName>
    <active>true</active>
    <errorConditionFormula>AND(OR(Rating__c &lt; 1, Rating__c &gt; 5), ISPICKVAL(Status, &apos;Closed&apos;))</errorConditionFormula>
    <errorDisplayField>Rating__c</errorDisplayField>
    <errorMessage>Please enter value greater than or equal to 1 or less than or equal to 5</errorMessage>
</ValidationRule>
